{
  "name": "node-securepay",
  "version": "0.1.1",
  "description": "SecurePay API wrapper for node.js",
  "author": "Max",
  "license": "UNLICENSED",
  "main": "dist/index.js",
  "module": "src/index.js",
  "files": [
    "dist/",
    "lib/"
  ],
  "engines": {
    "node": ">=4"
  },
  "scripts": {
    "lint": "xo",
    "test": "npm run lint && BABEL_ENV=development ava",
    "build": "BABEL_ENV=production rollup -c",
    "precommit": "lint-staged && npm run build && git add dist/index.js"
  },
  "xo": {
    "extends": "prettier",
    "ignores": [
      "dist/**"
    ]
  },
  "lint-staged": {
    "{src,test}/**/*.js": [
      "npm run lint",
      "prettier --single-quote --write",
      "git add"
    ]
  },
  "ava": {
    "files": [
      "test/**/*.js"
    ],
    "source": [
      "src/**/*.js"
    ],
    "require": [
      "babel-register"
    ]
  },
  "dependencies": {
    "is-plain-object": "^2.0.4",
    "node-fetch": "^1.7.3",
    "schema-object": "^4.0.11",
    "xml-js": "^1.5.2"
  },
  "devDependencies": {
    "ava": "^0.23.0",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-register": "^6.26.0",
    "eslint-config-prettier": "^2.8.0",
    "husky": "^0.14.3",
    "lint-staged": "^5.0.0",
    "pify": "^3.0.0",
    "prettier": "1.8.2",
    "rollup": "^0.51.8",
    "rollup-plugin-babel": "^3.0.2",
    "xo": "^0.18.2"
  }
}
